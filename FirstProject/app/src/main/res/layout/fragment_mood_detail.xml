<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mood_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.main.MoodDetailFragment">

    <TextView
        android:id="@+id/mood_fragment"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="315dp"
        android:layout_height="297dp"
        android:background="@drawable/polaroid_frame">

        <ImageView
            android:id="@+id/picture_fragment"
            android:layout_width="279dp"
            android:layout_height="218dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:background="@color/black"
            android:contentDescription="@string/pic"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_fragment"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="@font/bubbler_one"
            android:gravity="start|top"
            android:scaleType="fitCenter"
            android:textSize="18sp"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picture_fragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>